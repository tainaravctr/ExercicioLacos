package ExercicioUm;

import java.util.Scanner;

public class ExVetores1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		int[] n = {2,5,1,3,4,9,7,8,10,6}; // aqui dentro eu declaro os numeros, cada numero tem sua posicao, por ex: o 2 a posicao dele é o 0, o 5 a posicao é a 1 e assim sucessivamente.
		int position, read, cont = 0;
		
		
		Scanner ler = new Scanner (System.in);
		
		
		System.out.println("\nDigite o número que você quer encontrar: ");
		read = ler.nextInt();
		
		for(position = 0; position <10; position++) {
			if(read == n[position]) {
				System.out.println("\nO número " +read+ "está na posição " +position);

			}
		}
		if(cont==0) {
			System.out.println("Seu numero nao foi encontrado.");
		}
	}

}

