package POO;

import java.util.Scanner;

public class Cliente {
	
	

	private String nome;
	private String sexo;
	private int idade;
	private String cpf;
	private String endereco;
	
	
	Scanner leia = new Scanner(System.in);
	
	
	//construtor
	public Cliente(String nome, String sexo, int idade, int i, String endereco) {
		super();
		this.nome = nome;
		this.sexo = sexo;
		this.idade = idade;
		this.endereco = endereco;
	}

	
		
	public String getNome() {
		return nome;
	}



	public void setNome(String nome) {
		this.nome = nome;
	}



	public String getSexo() {
		return sexo;
	}



	public void setSexo(String sexo) {
		this.sexo = sexo;
	}



	public int getIdade() {
		return idade;
	}



	public void setIdade(int idade) {
		this.idade = idade;
	}



	public String getTelefone() {
		return cpf;
	}



	public void setTelefone(String cpf) {
		this.cpf = cpf;
	}



	public String getEndereco() {
		return endereco;
	}



	public void setEndereco(String endereco) {
		this.endereco = endereco;
	}


	
	// metodo especifico
	
	if (idade < 18) {
        System.out.println("Abertura de conta Junior");
    } else {
        System.out.println("Você não é elegível para a conta Junior");
    }
	
	
	public void imprimirInfo() {
		System.out.println("\nO cliente do nome "+nome+" com sexo "+sexo+" tem  "+idade+
				" anos, e possui cpf: "+cpf+" Reside no endereço: "+endereco);
	}
	
   }
}
	
	


